import React, { useState, useEffect } from 'react';
import { Link } from 'react-router-dom';
import ProductCard from '../components/ProductCard';
import '../style/ProductListingPage.css';

const ProductListingPage = () => {
  const [products, setProducts] = useState([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');
  const [filters, setFilters] = useState({
    category: 'all',
    priceRange: [0, 20000],
    sortBy: 'featured'
  });
  const [showFilters, setShowFilters] = useState(false);
  
  // Mock data
  const mockProducts = [
    {
      id: 1,
      name: 'Handwoven Silk Saree',
      description: 'Traditional Banarasi silk with intricate zari work',
      price: 12500,
      originalPrice: 15000,
      discountPercentage: 17,
      image: 'https://images.unsplash.com/photo-1567557169255-8c2afd5c5cba?w=800&auto=format&fit=crop',
      category: 'Handloom',
      rating: 4.9,
      reviewCount: 128,
      stock: 5,
      isNew: true,
      isBestSeller: true,
      creatorName: 'Varanasi Weavers Collective'
    },
    {
      id: 2,
      name: 'Terracotta Water Pot',
      description: 'Earthen pot with natural cooling properties',
      price: 1200,
      image: 'https://images.unsplash.com/photo-1574732011388-8e9d1efa3f99?w=800&auto=format&fit=crop',
      category: 'Pottery',
      rating: 4.6,
      reviewCount: 45,
      stock: 12,
      isNew: false,
      isBestSeller: false,
      creatorName: 'Molela Pottery'
    },
    {
      id: 3,
      name: 'Sandalwood Jewelry Box',
      description: 'Hand-carved with traditional motifs',
      price: 4500,
      originalPrice: 5500,
      discountPercentage: 18,
      image: 'https://images.unsplash.com/photo-1600359715156-b6d0e5c598b0?w=800&auto=format&fit=crop',
      category: 'Woodwork',
      rating: 4.8,
      reviewCount: 34,
      stock: 3,
      isNew: true,
      isBestSeller: false,
      creatorName: 'Mysore Woodworks'
    },
    {
      id: 4,
      name: 'Pashmina Shawl',
      description: '100% pure pashmina wool with embroidery',
      price: 8500,
      image: 'https://images.unsplash.com/photo-1583394838336-acd977736f90?w=800&auto=format&fit=crop',
      category: 'Handloom',
      rating: 4.8,
      reviewCount: 67,
      stock: 8,
      isNew: false,
      isBestSeller: true,
      creatorName: 'Kashmir Crafts'
    },
    {
      id: 5,
      name: 'Blue Pottery Tea Set',
      description: 'Traditional Persian technique with blue patterns',
      price: 2800,
      image: 'https://images.unsplash.com/photo-1589829545856-d10d557cf95f?w=800&auto=format&fit=crop',
      category: 'Ceramics',
      rating: 4.9,
      reviewCount: 56,
      stock: 6,
      isNew: false,
      isBestSeller: true,
      creatorName: 'Jaipur Blue Pottery'
    },
    {
      id: 6,
      name: 'Leather Messenger Bag',
      description: 'Hand-tooled leather with embossed design',
      price: 3200,
      originalPrice: 4000,
      discountPercentage: 20,
      image: 'https://images.unsplash.com/photo-1584917865442-de89df76afd3?w=800&auto=format&fit=crop',
      category: 'Leatherwork',
      rating: 4.6,
      reviewCount: 78,
      stock: 4,
      isNew: true,
      isBestSeller: false,
      creatorName: 'Kolhapuri Crafts'
    },
    {
      id: 7,
      name: 'Bamboo Storage Baskets',
      description: 'Eco-friendly and durable storage solution',
      price: 800,
      image: 'https://images.unsplash.com/photo-1516937941344-00b4e0337589?w=800&auto=format&fit=crop',
      category: 'Basketry',
      rating: 4.5,
      reviewCount: 92,
      stock: 15,
      isNew: false,
      isBestSeller: false,
      creatorName: 'Assam Weavers'
    },
    {
      id: 8,
      name: 'Silver Filigree Necklace',
      description: 'Fine silver wire work in traditional patterns',
      price: 9500,
      image: 'https://images.unsplash.com/photo-1599643478518-a784e5dc4c8f?w=800&auto=format&fit=crop',
      category: 'Jewelry',
      rating: 5.0,
      reviewCount: 18,
      stock: 2,
      isNew: true,
      isBestSeller: true,
      creatorName: 'Cuttack Silversmiths'
    }
  ];

  const categories = [
    { id: 'all', name: 'All Products', count: 48 },
    { id: 'handloom', name: 'Handloom & Textiles', count: 24 },
    { id: 'pottery', name: 'Pottery & Ceramics', count: 18 },
    { id: 'woodwork', name: 'Woodwork', count: 15 },
    { id: 'metalwork', name: 'Metalwork', count: 12 },
    { id: 'leather', name: 'Leatherwork', count: 9 },
    { id: 'jewelry', name: 'Jewelry', count: 21 }
  ];

  useEffect(() => {
    fetchProducts();
  }, [filters]);

  const fetchProducts = async () => {
    try {
      setLoading(true);
      // Simulate API call
      setTimeout(() => {
        setProducts(mockProducts);
        setLoading(false);
      }, 500);
    } catch (err) {
      setError('Failed to load products. Please try again.');
      setLoading(false);
    }
  };

  const handleCategoryChange = (categoryId) => {
    setFilters({ ...filters, category: categoryId });
  };

  const handleSortChange = (e) => {
    setFilters({ ...filters, sortBy: e.target.value });
  };

  return (
    <div className="products-page">
      {/* Breadcrumb */}
      <div className="breadcrumb">
        <div className="container">
          <Link to="/" className="breadcrumb-link">
            <i className="fas fa-home"></i> Home
          </Link>
          <span className="breadcrumb-separator">/</span>
          <span className="breadcrumb-current">Products</span>
        </div>
      </div>

      {/* Page Header */}
      <div className="container">
        <div className="page-header">
          <h1>Handcrafted Treasures</h1>
          <p className="page-subtitle">
            Discover unique handmade products from skilled artisans across India
          </p>
        </div>

        {error && (
          <div className="error-alert">
            <i className="fas fa-exclamation-circle"></i>
            {error}
          </div>
        )}

        <div className="products-container">
          {/* Sidebar Filters */}
          <aside className={`filters-sidebar ${showFilters ? 'active' : ''}`}>
            <div className="filters-header">
              <h3><i className="fas fa-filter"></i> Filters</h3>
              <button 
                className="close-filters-btn"
                onClick={() => setShowFilters(false)}
              >
                <i className="fas fa-times"></i>
              </button>
            </div>

            {/* Categories */}
            <div className="filter-section">
              <h4>Categories</h4>
              <div className="categories-list">
                {categories.map((category) => (
                  <button
                    key={category.id}
                    className={`category-btn ${filters.category === category.id ? 'active' : ''}`}
                    onClick={() => handleCategoryChange(category.id)}
                  >
                    <span>{category.name}</span>
                    <span className="category-count">{category.count}</span>
                  </button>
                ))}
              </div>
            </div>

            {/* Price Range */}
            <div className="filter-section">
              <h4>Price Range</h4>
              <div className="price-range">
                <input
                  type="range"
                  min="0"
                  max="20000"
                  value={filters.priceRange[1]}
                  onChange={(e) => setFilters({...filters, priceRange: [0, parseInt(e.target.value)]})}
                  className="price-slider"
                />
                <div className="price-labels">
                  <span>₹0</span>
                  <span>₹20,000</span>
                </div>
                <div className="selected-price">
                  Up to: ₹{filters.priceRange[1].toLocaleString()}
                </div>
              </div>
            </div>

            {/* Customization */}
            <div className="filter-section">
              <h4>Customization</h4>
              <div className="checkbox-group">
                <label className="checkbox-label">
                  <input type="checkbox" />
                  <span>Customizable Only</span>
                </label>
                <label className="checkbox-label">
                  <input type="checkbox" />
                  <span>Made to Order</span>
                </label>
                <label className="checkbox-label">
                  <input type="checkbox" />
                  <span>Ready to Ship</span>
                </label>
              </div>
            </div>

            {/* Material */}
            <div className="filter-section">
              <h4>Material</h4>
              <div className="chips-container">
                {['Wood', 'Clay', 'Metal', 'Fabric', 'Leather', 'Glass'].map((material) => (
                  <button key={material} className="material-chip">
                    {material}
                  </button>
                ))}
              </div>
            </div>

            {/* Clear Filters */}
            <button className="clear-filters-btn">
              <i className="fas fa-times-circle"></i>
              Clear All Filters
            </button>
          </aside>

          {/* Main Content */}
          <main className="products-main">
            {/* Toolbar */}
            <div className="products-toolbar">
              <div className="toolbar-left">
                <button 
                  className="filter-toggle-btn"
                  onClick={() => setShowFilters(!showFilters)}
                >
                  <i className="fas fa-filter"></i>
                  Filters
                </button>
                <span className="products-count">
                  Showing {products.length} of 48 products
                </span>
              </div>
              
              <div className="toolbar-right">
                <div className="sort-container">
                  <label htmlFor="sort-select">
                    <i className="fas fa-sort-amount-down"></i>
                    Sort By:
                  </label>
                  <select 
                    id="sort-select"
                    value={filters.sortBy}
                    onChange={handleSortChange}
                    className="sort-select"
                  >
                    <option value="featured">Featured</option>
                    <option value="newest">Newest First</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="rating">Highest Rated</option>
                    <option value="popular">Most Popular</option>
                  </select>
                </div>
              </div>
            </div>

            {/* Products Grid */}
            {loading ? (
              <div className="loading-container">
                <div className="spinner"></div>
                <p>Loading products...</p>
              </div>
            ) : products.length === 0 ? (
              <div className="no-products">
                <i className="fas fa-search"></i>
                <h3>No products found</h3>
                <p>Try adjusting your filters or search terms</p>
              </div>
            ) : (
              <>
                <div className="products-grid">
                  {products.map((product) => (
                    <ProductCard key={product.id} product={product} />
                  ))}
                </div>

                {/* Pagination */}
                <div className="pagination">
                  <button className="pagination-btn" disabled>
                    <i className="fas fa-chevron-left"></i>
                  </button>
                  <button className="pagination-btn active">1</button>
                  <button className="pagination-btn">2</button>
                  <button className="pagination-btn">3</button>
                  <span className="pagination-dots">...</span>
                  <button className="pagination-btn">8</button>
                  <button className="pagination-btn">
                    <i className="fas fa-chevron-right"></i>
                  </button>
                </div>
              </>
            )}
          </main>
        </div>
      </div>
    </div>
  );
};

export default ProductListingPage;